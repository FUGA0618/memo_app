<a href="/memos/new"><button type="button" class="btn btn-primary mb-3">新規追加</button></a>
<% if @display_files.size.zero? %>
  <p>まだメモはありません。</p>
<% else %>
  <div class="card">
    <ul class="list-group list-group-flush">
      <% @display_files.each do |file| %>
        <% memo = Memo.new(file.to_s.delete('.json')) %>
        <li class="list-group-item"><a href="/memos/<%= escape(memo.id) %>"><%= escape(memo.title) %></a></li>
      <% end %>
    </ul>
  </div>
<% end %>
