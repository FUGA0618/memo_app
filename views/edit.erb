<form method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">タイトル</label>
    <input type="text" name="title" class="form-control" id="exampleFormControlInput1" value="<%= escape(@memo.title)
    %>">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">内容</label>
    <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="10"><%= escape(@memo.description) %></textarea>
  </div>
  <input type="submit" class="btn btn-primary btn-lg" value="更新">
  <input type="hidden" name="_method" value="PATCH">
</form>
